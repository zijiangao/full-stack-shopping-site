<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/app.css">
    <script src="https://polyfill.io/v3/polyfill.min.js?version=3.52.1&features=fetch"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>
    <script src="https://js.stripe.com/v3/"></script>

    <title><%= pageTitle %></title>
  </head>
  <body>
    <nav class="navbar  navbar-expand-lg navbar-light bg-light navbar-fixed-top">
        <div class="nav container navbar-fixed-top">
            <a class="navbar-brand" href="#">Shopping App</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
          
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                  <a class="nav-link" href="/products">Home <span class="sr-only">(current)</span></a>
                </li>
                
    
                <% if (user === null) { %>
    
                  <li class="nav-item">
                    <a class="nav-link" href="/users/login">Login</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/users/register">Register</a>
                  </li>
                  
    
                <% } else { %>
                  <% if(userAccess==="normal"){ %>
                    <li class="nav-item">
                        <a class="nav-link" href="/cart">My Shopping Cart</a>
                        </li>
                  <% } %>
                    <li class="nav-item">
                        <a class="nav-link" href="/users/dashboard">My Dashboard</a>
                    </li>
     
                    <% if(userAccess==="admin"){ %>
                      <li class="nav-item">
                        <a class="nav-link" href="/products/new">New Product</a>
                      </li>
                    <% } %>
                    <li class="nav-item">
                        <form method="POST" action="/users/logout">
                        <button type="submit" class="btn nav-link logout-button" style="border: 0;">Logout</button>
                        </form>
                    </li>
    
                <% } %>
    
              </ul>
            </div>
        </div>
        
    </nav>